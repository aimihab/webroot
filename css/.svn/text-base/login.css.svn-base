/* CSS Document */
body{
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
}
body>div{
	background-image:url(../images/login_bg.png);
	background-position:center;
	background-repeat:no-repeat;
	background-attachment:fixed;
	margin:0 auto;
	text-align:center;
	width:1000px;
	overflow:hidden;
}
#div-content{
	margin:20% 33%;
	text-align:center;
}
#div-company{
	font-size: 19px;
	color:#ACB4BD;
	margin-top: 20px;
}
#form-login{
	padding-top:20px;
}
#div-input input{
	width:100%;
	font-size: 20px;
	padding:10px 0px 10px 60px;
	border-width:1px;
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
}
#password{
	background:#E6E7E9 url(../images/icon_password.png) 20px center no-repeat;
}
#username{
	background:#E6E7E9 url(../images/icon_username.png) 20px center no-repeat;
}
#div-input{
	border-radius: 4px;
	overflow:hidden;
}
#btn-login{
	background-repeat:no-repeat;
	background-image:url(../images/btn_login.png);
	background-position:left;
	width:100%;
	height:100%;
	border:0px;
	font-size:28px;
	padding:10px 0px;
	color:#FFF;
	background-size: 100% 100%;
	margin-top:20px;
	background-image:url(../images/btn_login.png);
}
.btn-login{
	background-image:url(../images/btn_login.png);
}
.btn-login-hl{
	background-image:url(../images/btn_login_hl.png);
}
#btn-login:hover{
	cursor:pointer;
}
#btn-login:active {background-image:url(../images/btn_login_hl.png);}